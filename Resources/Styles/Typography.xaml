<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ==================== -->
    <!-- Material 3 Typography -->
    <!-- ==================== -->

    <!-- Display Styles - Hero sections, large numbers -->
    <Style x:Key="DisplayLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="57" />
        <Setter Property="LineHeight" Value="1.12" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="DisplayMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="45" />
        <Setter Property="LineHeight" Value="1.15" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="DisplaySmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="LineHeight" Value="1.22" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <!-- Headline Styles - Page headers -->
    <Style x:Key="HeadlineLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="HeadlineMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="LineHeight" Value="1.28" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="HeadlineSmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <!-- Title Styles - Card headers, section titles -->
    <Style x:Key="TitleLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="LineHeight" Value="1.27" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="TitleMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="TitleSmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.42" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <!-- Body Styles - Main content text -->
    <Style x:Key="BodyLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="BodyMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.42" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="BodySmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <!-- Label Styles - Buttons, tabs, form labels -->
    <Style x:Key="LabelLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.42" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="LabelMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <Style x:Key="LabelSmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="LineHeight" Value="1.45" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource TextPrimaryDark}}" />
    </Style>

    <!-- ==================== -->
    <!-- Semantic Text Styles -->
    <!-- ==================== -->

    <Style x:Key="TextSecondary" TargetType="Label" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceVariant}, Dark={StaticResource TextSecondaryDark}}" />
    </Style>

    <Style x:Key="TextSuccess" TargetType="Label" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="TextColor" Value="{StaticResource Success}" />
    </Style>

    <Style x:Key="TextDanger" TargetType="Label" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="TextColor" Value="{StaticResource Danger}" />
    </Style>

    <Style x:Key="TextWarning" TargetType="Label" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="TextColor" Value="{StaticResource Warning}" />
    </Style>

    <Style x:Key="TextInfo" TargetType="Label" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="TextColor" Value="{StaticResource Info}" />
    </Style>

    <!-- ==================== -->
    <!-- Financial Text Styles -->
    <!-- ==================== -->

    <!-- Income Text (Green) -->
    <Style x:Key="TextIncome" TargetType="Label" BasedOn="{StaticResource TitleMedium}">
        <Setter Property="TextColor" Value="{StaticResource Income}" />
    </Style>

    <Style x:Key="TextIncomeAmount" TargetType="Label" BasedOn="{StaticResource HeadlineMedium}">
        <Setter Property="TextColor" Value="{StaticResource Income}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
    </Style>

    <!-- Expense Text (Red) -->
    <Style x:Key="TextExpense" TargetType="Label" BasedOn="{StaticResource TitleMedium}">
        <Setter Property="TextColor" Value="{StaticResource Expense}" />
    </Style>

    <Style x:Key="TextExpenseAmount" TargetType="Label" BasedOn="{StaticResource HeadlineMedium}">
        <Setter Property="TextColor" Value="{StaticResource Expense}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
    </Style>

    <!-- Balance Text (Purple) -->
    <Style x:Key="TextBalance" TargetType="Label" BasedOn="{StaticResource TitleMedium}">
        <Setter Property="TextColor" Value="{StaticResource Balance}" />
    </Style>

    <Style x:Key="TextBalanceAmount" TargetType="Label" BasedOn="{StaticResource DisplaySmall}">
        <Setter Property="TextColor" Value="{StaticResource Balance}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
    </Style>

    <!-- ==================== -->
    <!-- Monospace / Numbers  -->
    <!-- ==================== -->

    <Style x:Key="TextMonospace" TargetType="Label" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style x:Key="AmountLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <Style x:Key="AmountMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="1.4" />
    </Style>

    <Style x:Key="AmountSmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>

</ResourceDictionary>
