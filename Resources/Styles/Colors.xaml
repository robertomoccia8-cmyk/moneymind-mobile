<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ==================== -->
    <!-- Material 3 Palette   -->
    <!-- ==================== -->

    <!-- Primary Colors - Deep Purple -->
    <Color x:Key="Primary">#6750A4</Color>
    <Color x:Key="PrimaryDark">#4F378B</Color>
    <Color x:Key="PrimaryLight">#D0BCFF</Color>
    <Color x:Key="OnPrimary">#FFFFFF</Color>
    <Color x:Key="PrimaryContainer">#EADDFF</Color>
    <Color x:Key="OnPrimaryContainer">#21005D</Color>

    <!-- Secondary Colors - Teal -->
    <Color x:Key="Secondary">#625B71</Color>
    <Color x:Key="SecondaryDark">#4A4458</Color>
    <Color x:Key="SecondaryLight">#CCC2DC</Color>
    <Color x:Key="OnSecondary">#FFFFFF</Color>
    <Color x:Key="SecondaryContainer">#E8DEF8</Color>
    <Color x:Key="OnSecondaryContainer">#1D192B</Color>

    <!-- Tertiary Colors - Pink -->
    <Color x:Key="Tertiary">#7D5260</Color>
    <Color x:Key="TertiaryContainer">#FFD8E4</Color>
    <Color x:Key="OnTertiary">#FFFFFF</Color>
    <Color x:Key="OnTertiaryContainer">#31111D</Color>

    <!-- ==================== -->
    <!-- Semantic Colors      -->
    <!-- ==================== -->

    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="SuccessLight">#81C784</Color>
    <Color x:Key="SuccessDark">#388E3C</Color>

    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="WarningLight">#FFB74D</Color>
    <Color x:Key="WarningDark">#F57C00</Color>

    <Color x:Key="Danger">#F44336</Color>
    <Color x:Key="DangerLight">#E57373</Color>
    <Color x:Key="DangerDark">#D32F2F</Color>

    <Color x:Key="Info">#2196F3</Color>
    <Color x:Key="InfoLight">#64B5F6</Color>
    <Color x:Key="InfoDark">#1976D2</Color>

    <!-- ==================== -->
    <!-- Financial Colors     -->
    <!-- ==================== -->

    <Color x:Key="Income">#00C853</Color>
    <Color x:Key="IncomeLight">#69F0AE</Color>
    <Color x:Key="IncomeDark">#00953A</Color>
    <Color x:Key="IncomeBackground">#E8F5E9</Color>

    <Color x:Key="Expense">#FF1744</Color>
    <Color x:Key="ExpenseLight">#FF8A80</Color>
    <Color x:Key="ExpenseDark">#D50000</Color>
    <Color x:Key="ExpenseBackground">#FFEBEE</Color>

    <Color x:Key="Savings">#2979FF</Color>
    <Color x:Key="SavingsLight">#82B1FF</Color>
    <Color x:Key="SavingsDark">#2962FF</Color>
    <Color x:Key="SavingsBackground">#E3F2FD</Color>

    <Color x:Key="Balance">#7C4DFF</Color>
    <Color x:Key="BalanceLight">#B388FF</Color>
    <Color x:Key="BalanceDark">#651FFF</Color>
    <Color x:Key="BalanceBackground">#EDE7F6</Color>

    <!-- ==================== -->
    <!-- Neutral Colors       -->
    <!-- ==================== -->

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <Color x:Key="Gray50">#FAFAFA</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#121212</Color>

    <!-- ==================== -->
    <!-- Surface Colors       -->
    <!-- ==================== -->

    <Color x:Key="Surface">#FFFBFE</Color>
    <Color x:Key="SurfaceVariant">#E7E0EC</Color>
    <Color x:Key="OnSurface">#1C1B1F</Color>
    <Color x:Key="OnSurfaceVariant">#49454F</Color>
    <Color x:Key="Outline">#79747E</Color>
    <Color x:Key="OutlineVariant">#CAC4D0</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundLight">#FFFBFE</Color>
    <Color x:Key="BackgroundDark">#1C1B1F</Color>
    <Color x:Key="SurfaceLight">#FFFBFE</Color>
    <Color x:Key="SurfaceDark">#2B2930</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryLight">#1C1B1F</Color>
    <Color x:Key="TextSecondaryLight">#49454F</Color>
    <Color x:Key="TextPrimaryDark">#E6E1E5</Color>
    <Color x:Key="TextSecondaryDark">#CAC4D0</Color>

    <!-- ==================== -->
    <!-- Card & Container     -->
    <!-- ==================== -->

    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="CardBackgroundDark">#2B2930</Color>
    <Color x:Key="CardBorder">#E7E0EC</Color>
    <Color x:Key="CardBorderDark">#49454F</Color>

    <!-- ==================== -->
    <!-- Interactive States   -->
    <!-- ==================== -->

    <Color x:Key="Ripple">#1F6750A4</Color>
    <Color x:Key="Hover">#0F6750A4</Color>
    <Color x:Key="Focus">#1F6750A4</Color>
    <Color x:Key="Pressed">#3D6750A4</Color>
    <Color x:Key="Disabled">#1F1C1B1F</Color>
    <Color x:Key="DisabledText">#61000000</Color>
    <!-- Aliases for current theme (Light) -->
    <Color x:Key="TextPrimary">#1C1B1F</Color>
    <Color x:Key="TextSecondary">#49454F</Color>


</ResourceDictionary>
