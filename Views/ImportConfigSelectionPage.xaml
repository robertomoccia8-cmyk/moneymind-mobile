<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyMindApp.ViewModels"
             xmlns:models="clr-namespace:MoneyMindApp.Models"
             x:Class="MoneyMindApp.Views.ImportConfigSelectionPage"
             x:DataType="viewmodels:ImportConfigSelectionViewModel"
             Title="Importa - Seleziona Configurazione"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ“‹ Step 1: Seleziona Configurazione"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Scegli una configurazione esistente per la tua banca o crea una nuova configurazione personalizzata."
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Frame>

            <!-- 4 Action Buttons -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="âš™ï¸ Azioni"
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <!-- Row 1: Nuova Configurazione + Carica Selezionata -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="âž• Nuova"
                                Command="{Binding CreateNewConfigurationCommand}"
                                BackgroundColor="{StaticResource Secondary}"
                                TextColor="White"
                                FontSize="14"
                                HeightRequest="48"/>

                        <Button Grid.Column="1"
                                Text="âœ… Carica Selezionata"
                                Command="{Binding LoadSelectedConfigurationCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="14"
                                HeightRequest="48"
                                IsEnabled="{Binding ConfigurazioneSelezionata, Converter={StaticResource NullToBoolConverter}}"/>
                    </Grid>

                    <!-- Row 2: Modifica + Elimina -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="âœï¸ Modifica"
                                Command="{Binding EditConfigurationCommand}"
                                BackgroundColor="Orange"
                                TextColor="White"
                                FontSize="14"
                                HeightRequest="48"
                                IsEnabled="{Binding ConfigurazioneSelezionata, Converter={StaticResource NullToBoolConverter}}"/>

                        <Button Grid.Column="1"
                                Text="ðŸ—‘ï¸ Elimina"
                                Command="{Binding DeleteConfigurationCommand}"
                                CommandParameter="{Binding ConfigurazioneSelezionata}"
                                BackgroundColor="{StaticResource Danger}"
                                TextColor="White"
                                FontSize="14"
                                HeightRequest="48"
                                IsEnabled="{Binding ConfigurazioneSelezionata, Converter={StaticResource NullToBoolConverter}}"/>
                    </Grid>

                    <!-- Hint -->
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ’¡ " FontAttributes="Bold"/>
                                <Span Text="Seleziona una configurazione dall'elenco per abilitare i pulsanti Carica, Modifica ed Elimina."/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

            <!-- Separator -->
            <BoxView HeightRequest="1"
                     Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                     Margin="0,8"/>

            <Label Text="ðŸ“‹ Configurazioni Disponibili:"
                   FontSize="16"
                   FontAttributes="Bold"
                   IsVisible="{Binding HasConfigurations}"/>

            <!-- Lista Configurazioni -->
            <CollectionView ItemsSource="{Binding Configurazioni}"
                            SelectionMode="None"
                            IsVisible="{Binding HasConfigurations}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ConfigurazioneImportazione">
                        <Border Padding="16"
                                Margin="0,8"
                                StrokeThickness="3"
                                StrokeShape="RoundRectangle 12">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=SelectConfigurationCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Border.Triggers>
                                <!-- Highlight quando selezionata - BLU EVIDENTE -->
                                <DataTrigger TargetType="Border"
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                            Value="{Binding Nome}">
                                    <Setter Property="BackgroundColor" Value="#2196F3" />
                                    <Setter Property="Stroke" Value="#1565C0" />
                                </DataTrigger>
                                <!-- Stato non selezionato -->
                                <DataTrigger TargetType="Border"
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                            Value="">
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}" />
                                    <Setter Property="Stroke" Value="{AppThemeBinding Light=#E0E0E0, Dark=#404040}" />
                                </DataTrigger>
                            </Border.Triggers>

                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="8">

                                    <!-- Nome Configurazione -->
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="{Binding IsPreset, Converter={StaticResource BoolToStringConverter}, ConverterParameter='â­|ðŸ“'}"
                                               FontSize="18"
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding Nome}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                            Value="{Binding Nome}">
                                                    <Setter Property="TextColor" Value="White" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </HorizontalStackLayout>

                                    <!-- Info Configurazione -->
                                    <VerticalStackLayout Spacing="4">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="ðŸ“ Riga header: " FontAttributes="Bold"/>
                                                    <Span Text="{Binding RigaIntestazione}"/>
                                                    <Span Text=" | Separatore: "/>
                                                    <Span Text="{Binding Separatore}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                            Value="{Binding Nome}">
                                                    <Setter Property="TextColor" Value="White" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>

                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="ðŸ“… Formato: " FontAttributes="Bold"/>
                                                    <Span Text="{Binding FormatoData}"/>
                                                    <Span Text=" | Decimali: "/>
                                                    <Span Text="{Binding SeparatoreDecimali}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                            Value="{Binding Nome}">
                                                    <Setter Property="TextColor" Value="White" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>

                                        <Label Text="{Binding Note}"
                                               FontSize="12"
                                               IsVisible="{Binding Note, Converter={StaticResource StringToBoolConverter}}">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                            Value="{Binding Nome}">
                                                    <Setter Property="TextColor" Value="White" />
                                                    <Setter Property="Opacity" Value="0.9" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>

                                        <!-- Data Ultimo Utilizzo -->
                                        <Label Text="{Binding UltimoUtilizzo, StringFormat='Ultimo uso: {0:dd/MM/yyyy HH:mm}'}"
                                               FontSize="11"
                                               Opacity="0.8">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                            Value="{Binding Nome}">
                                                    <Setter Property="TextColor" Value="White" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>

                                <!-- Icona Selezionata (checkmark) -->
                                <Label Grid.Column="1"
                                       Text="âœ“"
                                       FontSize="32"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                    Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                    Value="{Binding Nome}">
                                            <Setter Property="IsVisible" Value="True" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label"
                                                    Binding="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ImportConfigSelectionViewModel}}, Path=ConfigurazioneSelezionata.Nome}"
                                                    Value="">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <VerticalStackLayout Spacing="12" Padding="32" HorizontalOptions="Center">
                        <Label Text="ðŸ“­" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="Nessuna configurazione trovata"
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                        <Label Text="Clicca 'Crea Nuova Configurazione' per iniziare"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Status Message -->
            <Label Text="{Binding StatusMessage}"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   TextColor="{StaticResource Primary}"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource StringToBoolConverter}}"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="{StaticResource Primary}"
                               WidthRequest="40"
                               HeightRequest="40"/>

            <!-- Cancel Button -->
            <Button Text="Annulla"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Margin="0,16,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
