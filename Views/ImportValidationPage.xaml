<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyMindApp.ViewModels"
             xmlns:models="clr-namespace:MoneyMindApp.Models"
             x:Class="MoneyMindApp.Views.ImportValidationPage"
             x:DataType="viewmodels:ImportValidationViewModel"
             Title="Importa - Validazione"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="âœ… Step 4: Validazione Transazioni"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Verifica le transazioni prima dell'importazione. Le righe verdi sono valide, le rosse hanno errori."
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Statistics Summary -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="16" CornerRadius="12"
                   IsVisible="{Binding ValidationCompleted}">
                <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">

                    <!-- Total Count -->
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="ðŸ“Š Totali"
                               FontSize="12"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                        <Label Text="{Binding TotalCount}"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Primary}"/>
                    </VerticalStackLayout>

                    <!-- Valid Count -->
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label Text="âœ… Valide"
                               FontSize="12"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                        <Label Text="{Binding ValidCount}"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="Green"/>
                    </VerticalStackLayout>

                    <!-- Error Count -->
                    <VerticalStackLayout Grid.Column="2" Spacing="4">
                        <Label Text="âŒ Errori"
                               FontSize="12"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                        <Label Text="{Binding ErrorCount}"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="Red"/>
                    </VerticalStackLayout>

                    <!-- Success Percentage -->
                    <Frame Grid.Row="1" Grid.ColumnSpan="3"
                           Padding="12"
                           CornerRadius="8"
                           BackgroundColor="{Binding ValidPercentage, Converter={StaticResource PercentageToColorConverter}}">
                        <Label HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Tasso successo: " FontSize="14" TextColor="White"/>
                                    <Span Text="{Binding ValidPercentage, StringFormat='{0:F1}%'}"
                                          FontSize="18"
                                          FontAttributes="Bold"
                                          TextColor="White"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Filter Buttons -->
            <HorizontalStackLayout Spacing="8"
                                   HorizontalOptions="Center"
                                   IsVisible="{Binding ValidationCompleted}">
                <Button Text="ðŸ”„ Tutte"
                        Command="{Binding ShowAllRowsCommand}"
                        FontSize="12"
                        Padding="12,6"
                        BackgroundColor="{StaticResource Gray600}"
                        TextColor="White"/>

                <Button Text="âœ… Solo Valide"
                        Command="{Binding ShowValidOnlyCommand}"
                        FontSize="12"
                        Padding="12,6"
                        BackgroundColor="Green"
                        TextColor="White"/>

                <Button Text="âŒ Solo Errori"
                        Command="{Binding ShowErrorsOnlyCommand}"
                        FontSize="12"
                        Padding="12,6"
                        BackgroundColor="Red"
                        TextColor="White"/>
            </HorizontalStackLayout>

            <!-- Validation Results List -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="16" CornerRadius="12"
                   IsVisible="{Binding ValidationCompleted}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“‹ Anteprima Transazioni"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Label Text="{Binding StatusMessage}"
                           FontSize="12"
                           TextColor="Gray"/>

                    <CollectionView ItemsSource="{Binding ValidationRows}"
                                    SelectionMode="None"
                                    HeightRequest="500">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TransactionValidationRow">
                                <Frame Padding="12"
                                       Margin="0,4"
                                       CornerRadius="8"
                                       BackgroundColor="{Binding RowColor}"
                                       BorderColor="{Binding HasErrors, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Red|Green'}"
                                       HasShadow="True">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="6">

                                        <!-- Row Header: Number + Status -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding RowNumberFormatted}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding HasErrors, Converter={StaticResource BoolToColorConverter}, ConverterParameter='DarkRed|DarkGreen'}"/>

                                            <Label Grid.Column="1"
                                                   Text="{Binding StatusIcon}"
                                                   FontSize="20"/>
                                        </Grid>

                                        <!-- Data Row -->
                                        <Grid Grid.Row="1" ColumnDefinitions="80,*,100">
                                            <Label Text="ðŸ“… Data:"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding Data}"
                                                   FontSize="12"
                                                   FontFamily="Monospace"
                                                   TextColor="Black"/>
                                        </Grid>

                                        <!-- Importo Row -->
                                        <Grid Grid.Row="2" ColumnDefinitions="80,*">
                                            <Label Text="ðŸ’° Importo:"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding Importo}"
                                                   FontSize="12"
                                                   FontFamily="Monospace"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"/>
                                        </Grid>

                                        <!-- Descrizione Row -->
                                        <Grid Grid.Row="3" ColumnDefinitions="80,*">
                                            <Label Text="ðŸ“ Descriz.:"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding Descrizione}"
                                                   FontSize="12"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="2"
                                                   TextColor="Black"/>
                                        </Grid>

                                        <!-- Error Message (if any) -->
                                        <Frame Grid.Row="4"
                                               Padding="8"
                                               Margin="0,6,0,0"
                                               CornerRadius="6"
                                               BackgroundColor="DarkRed"
                                               IsVisible="{Binding HasErrors}">
                                            <Label Text="{Binding ErrorMessage}"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>
                                        </Frame>

                                        <!-- Duplicate Warning (if any) -->
                                        <Frame Grid.Row="4"
                                               Padding="8"
                                               Margin="0,6,0,0"
                                               CornerRadius="6"
                                               BackgroundColor="#FFB900"
                                               IsVisible="{Binding IsDuplicate}">
                                            <Label Text="âš ï¸ Duplicato - GiÃ  presente nel database"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>
                                        </Frame>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Loading Indicator -->
            <VerticalStackLayout Spacing="12"
                                 HorizontalOptions="Center"
                                 IsVisible="{Binding IsLoading}">
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   Color="{StaticResource Primary}"
                                   WidthRequest="50"
                                   HeightRequest="50"/>
                <Label Text="{Binding StatusMessage}"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="{StaticResource Primary}"/>
            </VerticalStackLayout>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12" IsVisible="{Binding ValidationCompleted}">

                <!-- Main Import Button -->
                <Button Text="âœ… Conferma e Importa Transazioni Valide"
                        Command="{Binding ConfirmImportCommand}"
                        IsEnabled="{Binding CanImport}"
                        BackgroundColor="Green"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="56"/>

                <!-- Secondary Actions -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Button Grid.Column="0"
                            Text="â¬…ï¸ Modifica Mapping"
                            Command="{Binding BackToMappingCommand}"
                            BackgroundColor="{StaticResource Gray600}"
                            TextColor="White"/>

                    <Button Grid.Column="1"
                            Text="âŒ Annulla"
                            Command="{Binding CancelCommand}"
                            BackgroundColor="Red"
                            TextColor="White"/>
                </Grid>
            </VerticalStackLayout>

            <!-- Warning if no valid rows -->
            <Frame Padding="16"
                   CornerRadius="12"
                   BackgroundColor="Orange"
                   IsVisible="{Binding CanImport, Converter={StaticResource InvertedBoolConverter}}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="âš ï¸ Attenzione"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Nessuna transazione valida trovata. Verifica il mapping delle colonne e il formato dei dati nel file."
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
