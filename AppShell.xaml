<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MoneyMindApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyMindApp"
    xmlns:views="clr-namespace:MoneyMindApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Main Navigation Tabs -->
    <TabBar>
        <ShellContent
            Title="Dashboard"
            Icon="home.svg"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="main" />

        <ShellContent
            Title="Transazioni"
            Icon="list.svg"
            ContentTemplate="{DataTemplate views:TransactionsPage}"
            Route="transactions" />

        <ShellContent
            Title="Conti"
            Icon="wallet.svg"
            ContentTemplate="{DataTemplate views:AccountSelectionPage}"
            Route="accounts" />

        <ShellContent
            Title="Analisi"
            Icon="chart.svg"
            ContentTemplate="{DataTemplate views:AnalyticsPage}"
            Route="analytics" />

        <ShellContent
            Title="Impostazioni"
            Icon="settings.svg"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="settings" />
    </TabBar>


</Shell>
